{
  "name": "ide-puppet",
  "version": "1.0.0",
  "description": "Atom IDE plugin for Puppet",
  "repository": "https://github.com/dalen/ide-puppet",
  "main": "lib/main.js",
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "atom": ">=1.21.0 <2.0.0"
  },
  "scripts": {
    "test": "eslint lib"
  },
  "keywords": ["puppet", "atom", "atom-ide"],
  "author": "Erik DalÃ©n",
  "license": "Apache-2.0",
  "dependencies": {
    "atom-languageclient": "^0.6.5",
    "es6-promisify": "^5.0.0",
    "net-retry-connect": "^0.1.1"
  },
  "configSchema": {
    "puppetRubyPath": {
      "title": "Puppet Agent Ruby Path",
      "type": "string",
      "default": "/opt/puppetlabs/puppet/bin/ruby",
      "description":
        "Absolute path to the Puppet Agent ruby binary (e.g. `/opt/puppetlabs/puppet/bin/ruby`)."
    },
    "connectionType": {
      "title": "Connection Type",
      "type": "string",
      "enum": ["stdio", "socket"],
      "default": "socket",
      "description": "The connection type for communicating with the Puppet language server."
    }
  },
  "enhancedScopes": ["source.puppet"],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "code-format.range": {
      "versions": {
        "0.1.0": "provideCodeFormat"
      }
    },
    "code-highlight": {
      "versions": {
        "0.1.0": "provideCodeHighlight"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "find-references": {
      "versions": {
        "0.1.0": "provideFindReferences"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    }
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "class-methods-use-this": [
        "error",
        {
          "exceptMethods": ["getGrammarScopes", "getLanguageName", "getServerName", "spawnServer"]
        }
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ]
    },
    "globals": {
      "atom": false
    },
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    }
  }
}
